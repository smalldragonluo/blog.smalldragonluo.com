article
  border-bottom 1px solid color-gray04
  border-top 1px solid color-gray05
  padding 30px 0
  position relative
  @media screen and (max-width: 800px)
    padding-bottom 15px
  @media screen and (max-width: 600px)
    padding 15px 0

  h1.title
    margin-bottom: 20px

    a
      color color-gray01

  .entry-content
    line-height 2
    text-align justify

    a
      &:hover
        text-decoration underline

    .more-link
      display block
      margin-top 16px
      padding-left 30px
      position relative

      &:before
        content "\f061"
        font 1.3em font-icon
        line-height 1.6em
        position absolute
        left 0

    p, blockquote, ul, ol, dl, table, iframe, h1, h2, h3, h4, h5, h6, .video-container
      margin-top 24px

    ul, ol, dl
      margin-left 20px

      ul, ol, dl
        margin-top 0

    strong
      font-weight bold

    em
      font-style italic

    p
      margin-top 20px

    h2
      border-bottom 1px solid color-gray04
      position relative

      &:before
        content ""
        position absolute
        bottom -2px
        border-bottom 1px solid color-gray05
        width 100%

    img, video
      max-width 100%
      height auto
      @extend .basic-alignment

    blockquote
      background color-gray04
      border-left 5px solid color-gray03
      font-size 1.2em
      //font-style italic
      font-family font-serif
      //padding 0 30px 15px
      padding: 12px 20px
      margin-top 10px

      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0

        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    iframe
      border none

    table
      margin-top: 20px
      position: relative;
      table-layout: fixed;
      border-collapse: collapse;
      border-spacing: 0;
      word-wrap: break-word;
      word-break: normal;
      font-weight: 400;
      box-sizing: border-box;
      border: 1px solid #d9d9d9;
      cursor: default;

    th, td
      text-align center
      border: 1px solid #d9d9d9;
      font-size: 14px;
      white-space: normal;
      word-wrap: break-word;
      vertical-align: top;
      padding: 4px 8px;
      cursor: default;
      line-height: 24px;

    .caption
      display block
      font-size 0.9em
      color color-gray02
      padding-left 25px
      position relative

      &:before
        content "\f040"
        color color-gray03
        font 1.3em font-icon
        line-height 1.6em
        position absolute
        left 0

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden

      iframe, object, embed
        position absolute
        top 0
        left 20%
        width 60%
        height 60%
        margin-top 0
        margin-left auto

.share
  padding 15px 0
  border-shadow()
